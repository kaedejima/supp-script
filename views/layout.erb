<body>
<nav class="navbar navbar-default">
	<p>NAVIGATION BAR</p>
  <% if !current_user.nil? %>
    <li><a href='/'>Hi, <%= current_user.name %></a></li>
		<li><a href="/signout">Logout</a></li>
	<% else %>
    <form action="/signin" method="post">
      <div class="">
        <input class="" type="text" name="name" placeholder="Enter your name">
        <input class="" type="password" id="psw" name="password" placeholder="Password">
        <input class="" type="submit" id="login-btn" value="Log in">
      </div>
    </form>
		<li><a href="/signup">Signup</a></li>
	<% end %>
</nav>
<main>

<%= yield %>

</main>
